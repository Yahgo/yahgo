@import "nib"
@import "fonts"

/*
 * HEADER
 */

#header-container

    background linear-gradient(top, #f3f3f3, #fff)
    min-height 40px
    
    .header
        position relative
        overflow auto

        h1
            margin 0 0 0 10px

            a
                &:hover
                    color #333

                float left
                noveCento noveN, 14px, #666, 40px
                text-decoration none


        #prefs
        #showTopics
            cursor pointer
            
            &:before
                line-height 40px
                float right
                color #666
                text-shadow 0 1px 0 #fff
                width 30px
                text-align center
                
            &:hover
                &:before
                    color #333
        
        #prefs
            &:before
                margin 0 10px 0 0

        #showTopics

            @media screen and (min-width : 599px)
                display none
                    