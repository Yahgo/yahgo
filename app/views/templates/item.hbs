
<div class="item-container">
	{{#unless error}}
		{{#if image}}
			{{#if image.url}}
			<div class="imgContainer">
				<div class="centerBox">
					<img src="{{image.url}}" alt="" />
				</div>
				<!--
					Switch comments if revert to canvas or img tag.
					See also initialize & site-controller
				-->
				<!--canvas></canvas-->
			</div>
			{{/if}}
		{{/if}}
		
		<div class="infos">
			<div class="source">
				<img class="favicon" src="http://g.etfv.co/{{source.url}}?defaulticon=http://en.wikipedia.org/favicon.ico" />
				<a class="dateAndName" href="{{source.url}}">{{fullDate pubDate}} | {{{source.content}}}</a>
			</div>
			<a class="title" href="{{link}}"><span data-url="{{link}}">{{title}}</span></a>
		</div>
	{{/unless}}
	{{#if error}}
		<span>Can't grab newsâ€¦ Try again !</span>
	{{/if}}
</div>